
@model IndexViewModel
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Hesabınızı Yönetin";
}


<div id="page-content" class="archive-page container">
    <div class="row">
        <div id="main-content" class="col-md-12">
            <div class="box">
                <center>
                    <div class="box-header">
                   
                        <h2>@ViewData["Title"]</h2>
                    </div>
                </center>
                <div class="box-content">
                    <div>
                        <h5>Hesap ayarlarınızı değiştirin</h5>
                   <a asp-route-id="@UserManager.GetUserId(User)" asp-controller="ApplicationUsers" asp-action="Edit" class="btn-bracketed">Kişisel Bilgilerinizi düzeltin</a>
                        <hr />
                        <dl class="dl-horizontal">
                            <div class="col-sm-4">
                                <img src="~/Deneme/images/4.jpg" style="height:200px; width:200px; alt="Third slide">
                                
                                    
                                <input asp-controller="Manage" asp-route-id="@UserManager.GetUserId(User)" enctype="multipart/form-data" type="file" id="inputFile" name="file" asp-action="UpdateImage" method="post" enctype="multipart/form-data" /></input> <br /><br />
                            
                            </div>
                            <div class="col-sm-4">
                               
                               
                                <dt>Şifre:


                                </dt>
                                <dd>
                                    @if (Model.HasPassword)
                                    {
                                        <a asp-controller="Manage" asp-action="ChangePassword" class="btn-bracketed">Değiştir</a>
                                    }
                                    else
                                    {
                                        <a asp-controller="Manage" asp-action="SetPassword" class="btn-bracketed">Yeni şifre oluştur</a>
                                    }
                                </dd>


                                <dd>
                                    <dt>Telefon Numarası:</dt>
                                    @(Model.PhoneNumber ?? "Henüz eklenmemiş")
                                    @if (Model.PhoneNumber != null)
                                    {
                                        <br/>
                                        <a asp-controller="Manage" asp-action="AddPhoneNumber" class="btn-bracketed">Change</a>
                                        <form asp-controller="Manage" asp-action="RemovePhoneNumber" method="post">
                                            [<button type="submit" class="btn-link">Sil</button>]
                                        </form>
                                    }
                                    else
                                    {
                                        <a asp-controller="Manage" asp-action="AddPhoneNumber" class="btn-bracketed">Ekle</a>
                                    }
                                </dd>
                            </div>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
