@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Şifrenizi Değiştirin";
}

<h2>@ViewData["Title"].</h2>
<div id="page-content" class="archive-page container">

    <div class="row">
        <div id="main-content" class="col-md-12">
            <div class="box">
                <center>
                    <div class="box-header">

                        <h2>@ViewData["Title"]</h2>

                    </div>
                </center>
                <div class="box-content">

                    <form asp-controller="Manage" asp-action="ChangePassword" method="post" class="form-horizontal">
                        <h4>Şifre Değiştir</h4>
                        <hr />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="OldPassword" class="col-md-2 control-label">Eski Şifreniz</label>
                            <div class="col-md-10">
                                <input asp-for="OldPassword" class="form-control" />
                                <span asp-validation-for="OldPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="NewPassword" class="col-md-2 control-label">Yeni Şifre</label>
                            <div class="col-md-10">
                                <input asp-for="NewPassword" class="form-control" />
                                <span asp-validation-for="NewPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="ConfirmPassword" class="col-md-2 control-label">Yeni Şifre Tekrar</label>
                            <div class="col-md-10">
                                <input asp-for="ConfirmPassword" class="form-control" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <button type="submit"  class="btn btn-default">Şifremi Değiştir</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
                    @section Scripts {
                        @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
                    }
