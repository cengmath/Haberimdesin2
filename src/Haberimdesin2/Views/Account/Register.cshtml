@model RegisterViewModel
@{
    ViewData["Title"] = "Üye Ol";
}

@{
    Layout = "_User";
}



<div class="row">
    <div id="main-content" class="col-md-8" >
        <div class="box" style=;margin-top: 20px">
            <div class="box-content">
                <form asp-controller="Account" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                    <center><h2>@ViewData["Title"]</h2></center>
                    <br />
              
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="col-md-2 control-label">Adınız</label>
                        <div class="col-md-10">
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Surname" class="col-md-2 control-label">Soyadınız</label>
                        <div class="col-md-10">
                            <input asp-for="Surname" class="form-control" />
                            <span asp-validation-for="Surname" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="col-md-2 control-label">Email Adresiniz</label>
                        <div class="col-md-10">
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="col-md-2 control-label">Şifreniz</label>
                        <div class="col-md-10">
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="col-md-2 control-label">Şifreniz Tekrar</label>
                        <div class="col-md-10">
                            <input asp-for="ConfirmPassword" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <button type="submit" class="btn-danger btn-lg">Üye Ol</button>
                        </div>
                    </div>
                </form>

                @section Scripts {
                    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
                }
            </div>
        </div>
    </div>
    <div class="col-md-4">
    <div class="box" style=;margin-top: 20px">
        <div class="box-content">
            <div class="widget " ng-controller="News">
         
              
                <div class="widget " ng-controller="News">

                    <div class="content">

                        <div class="wrap-vid">
                            <div class="zoom-container">
                                <div class="zoom-caption">


                                 
                                </div>
                                <img style="width: 600; height: 500px;" src="~/images/android.jpg" />
                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>
       </div>
        </div>
        </div>
