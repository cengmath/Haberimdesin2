@using Microsoft.AspNetCore.Identity
@using Haberimdesin2.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="" ng-class="News" ng-href="/Manage" title="Manage">Hoşgeldin {{getUser().name}} {{getUser().surname}}!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link"><span class="glyphicon glyphicon-off" style="color:crimson;"> Çıkış </span></button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register">Üye Ol</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login"><img src="~/images/giriş.png" style="height: 20px; width: 20px;" /> Giriş Yap  </a></li>
    </ul>
}
