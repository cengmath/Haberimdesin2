@{
    ViewData["Title"] = "Home Page";
}
<div class="container-fluid" ng-controller="News" style="padding-top:20px;">
    <div class="col-sm-3 col-md-3 col-lg-3">
        <h2>CATEGORIES</h2>
        <ul class="list-group">            
            <li class="list-group-item"  ng-repeat="category in categories"><btn class="btn btn-block btn-primary" ng-click="getNewsByCategory(category.categoryID)">{{category.name}}</btn></li>            
        </ul>
    </div>
    <div class="col-sm-9 col-md-9 col-lg-9" >
        <div class="panel panel-default" ng-repeat="haber in habers" style="margin-top:60px;">
            
            <div class="panel-heading">
                <img src="https://eliaslealblog.files.wordpress.com/2014/03/user-200.png" style="height: 40px; width: auto" alt="" />
                <h5 style="display: inline-block;"><small>{{haber.user.name + " " + haber.user.surname}}</small></h5>
                <ul class="list-inline pull-right" style="margin: 0; line-height: 40px">
                    <li class="list-inline-item" style="border-left: solid 1px grey; padding: 0 5px 0 5px">
                        <ul class="list-inline" style="margin: 0; line-height: 40px">
                            <li class="list-inline-item" style="padding: 0 5px 0 5px">
                                <h6 style="display: inline-block; margin: 0">{{haber.like}}</h6>
                                <i class="fa fa-2x fa-thumbs-o-up"></i>
                            </li>
                            <li class="list-inline-item" style="padding: 0 5px 0 5px">
                                <i class="fa fa-2x fa-thumbs-o-down"></i>
                                <h6 style="display: inline-block; margin: 0">{{haber.dislike}}</h6>
                            </li>
                        </ul>
                    </li>
                    <li class="list-inline-item" style="border-left: solid 1px grey; padding: 0 5px 0 5px">
                        <h6 style="display: inline-block; margin: 0">{{haber.timeStamp | date:'yyyy/MM/dd'}}</h6>
                    </li>
                </ul>
            </div>
            <div class="panel-body" style="text-align: center">
                <h2>{{haber.title}}</h2>
                  <div class="row"  ng-click="getNewsDetail(haber.haberID)">
                    <div class="container-fluid" style="padding: 0 15px 0 15px">
                        <div class="col-lg-4 col-md-4 col-sm-4">
                            <div class="row">
                                <img id="primaryImage" src="{{haber.primaryImgURL}}" style="width: 100%; height: auto; margin-top: 5px" alt="">
                            </div>
                        </div>
                        <div class="col-lg-8 col-md-8 col-sm-8" style="text-align: left; font-size: 1.25em;">
                            {{haber.headLine}}
                        </div>
                    </div>
                </div>
            </div>



        </div>
    </div>



    <div class="col-sm-9 col-md-9 col-lg-9">
        <div class="panel panel-default" ng-repeat="haber in activeHaber">

            <div class="panel-heading">
                <img src="https://eliaslealblog.files.wordpress.com/2014/03/user-200.png" style="height: 40px; width: auto" alt="" />
                <h5 style="display: inline-block;"><small>{{haber.user.name + " " + haber.user.surname}}</small></h5>
                <ul class="list-inline pull-right" style="margin: 0; line-height: 40px">
                    <li class="list-inline-item" style="border-left: solid 1px grey; padding: 0 5px 0 5px">
                        <ul class="list-inline" style="margin: 0; line-height: 40px">
                            <li class="list-inline-item" style="padding: 0 5px 0 5px" ng-click="likeNews()">
                                <h6 style="display: inline-block; margin: 0">{{haber.like}}</h6>
                                <i class="fa fa-2x fa-thumbs-o-up"></i>
                            </li>
                            <li class="list-inline-item" style="padding: 0 5px 0 5px" ng-click="dislikeNews()">
                                <i class="fa fa-2x fa-thumbs-o-down"></i>
                                <h6 style="display: inline-block; margin: 0">{{haber.dislike}}</h6>
                            </li>
                        </ul>
                    </li>
                    <li class="list-inline-item" style="border-left: solid 1px grey; padding: 0 5px 0 5px">
                        <h6 style="display: inline-block; margin: 0">{{haber.timeStamp | date:'yyyy/MM/dd'}}</h6>
                    </li>
                </ul>
            </div>
            <div class="panel-body" style="text-align: center">
                <h2>{{haber.title}}</h2>
                <div class="row">
                    <div class="container-fluid" style="padding: 0 15px 0 15px">
                        <div class="col-lg-4 col-md-8 col-sm-8">
                            <div class="row">
                                <img id="primaryImage" src="{{haber.primaryImgURL}}" style="width: 100%; height: auto; margin-top: 5px" alt="">
                            </div>
                        </div>
                        <div class="col-lg-8 col-md-8 col-sm-8" style="text-align: left; font-size: 1.25em;">
                            {{haber.headLine}}
                        </div>
                        <div class="col-lg-8 col-md-8 col-sm-8" style="text-align: left; font-size: 1em;">
                            {{haber.detail}}
                        </div>
                        <form ng-submit="uploadComment()">
                            <div class="col-lg-10 col-md-4 col-sm-4" style="text-align: left; font-size: 1em; margin-top: 100px">
                                <h3>Yorum Ekle:</h3>
                                <input name="yorumIcerik" id="yorumIcerik" class="form-control" ng-model="yorumIcerik" ng-required="true" />
                            </div>
                            <div class="col-md-offset1 col-md-9" style="margin-top: 10px">
                                <input type="submit" class="btn btn-block btn-primary" value="Paylaş" />
                            </div>
                        </form>
                        <div class="col-lg-10 col-md-4 col-sm-4" style="text-align: left; font-size: 1em; margin-top: 100px">
                            <ul class="list-group">            
                                <li class="list-group-item"  ng-repeat="yorum in yorumlar track by $index">
                                    <div class="panel-heading">
                                        <img src="https://eliaslealblog.files.wordpress.com/2014/03/user-200.png" style="height: 40px; width: auto" alt="" />
                                        <h5 style="display: inline-block;"><small>{{kisiler[$index]}}</small></h5>
                                        <ul class="list-inline pull-right" style="margin: 0; line-height: 40px">
                                            <li class="list-inline-item" style="border-left: solid 1px grey; padding: 0 5px 0 5px">
                                                <ul class="list-inline" style="margin: 0; line-height: 40px">
                                                    <li class="list-inline-item" style="padding: 0 5px 0 5px" ng-click="likeComment(yorum.commentID, $index)">
                                                        <h6 style="display: inline-block; margin: 0">{{yorum.like}}</h6>
                                                        <i class="fa fa-2x fa-thumbs-o-up"></i>
                                                    </li>
                                                    <li class="list-inline-item" style="padding: 0 5px 0 5px" ng-click="dislikeComment(yorum.commentID, $index)">
                                                        <i class="fa fa-2x fa-thumbs-o-down"></i>
                                                        <h6 style="display: inline-block; margin: 0">{{yorum.dislike}}</h6>
                                                    </li>
                                                </ul>
                                            </li>
                                            <li class="list-inline-item" style="border-left: solid 1px grey; padding: 0 5px 0 5px">
                                                <h6 style="display: inline-block; margin: 0">{{yorum.timeStamp | date:'yyyy/MM/dd'}}</h6>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="panel-body" style="text-align: center">
                                        <h5 style="display: inline-block;"><small>{{yorum.content}}</small></h5>
                                        

                                    </div>



                                </li>            
                            </ul>
                        </div>
                   </div>
                </div>
            </div>



        </div>
    </div>


</div>

